{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 300,
  "data": {
    "url": "../data/world-110m.json",
    "format": {
      "type": "topojson",
      "feature": "countries"
    }
  },
  "transform": [{
    "lookup": "country",
    "from": {
      "data": {
        "url": "../data/uni_ranks_2017.csv"
      },
      "key": "country",
      "fields": ["international_students"]
    }
  }],
  "projection": {
    "type": "equalEarth"
  },
  "mark": "geoshape",
  "encoding": {
    "color": {
      "field": "international students",
      "type": "quantitative"
    }
  }
}
